{
	"submit-button": "Sign Up",
	"fields": {
		"email": {
			"type": "input",
			"label": "Email",
			"constraints": [
				{
					"name": "not-blank",
					"options": {
						"message": "Please provide your email address"
					}
				},
				{
					"name": "email"
				},
				{
					"callback": "module",
					"module": "user-integration",
					"method": "validate-email-available",
					"arguments": [
						"{{ data:email }}"
					]
				}
			]
		},
		"password": {
			"type": "input",
			"label": "Password",
			"settings": {
				"type": "password"
			},
			"constraints": [
				{
					"name": "not-blank",
					"options": {
						"message": "Please type your password"
					}
				}
			]
		},
		"confirm-password": {
			"type": "input",
			"label": "Confirm Password",
			"settings": {
				"type": "password"
			},
			"constraints": [
				{
					"name": "not-blank",
					"options": {
						"message": "Please confirm your password"
					}
				}
			]
		},
		"captcha": {
			"class": "\\Sitegear\\Ext\\Module\\RealCaptcha\\Form\\RealCaptchaField",
			"label": "Human Check",
			"constraints": [
				{
					"callback": "module",
					"module": "real-captcha",
					"method": "validate-captcha"
				}
			]
		}
	},
	"steps": [
		{
			"fieldsets": [
				{
					"fields": [
						"email",
						"password",
						"confirm-password",
						"captcha"
					]
				}
			],
			"processors": [
				{
					"module": "user-integration",
					"method": "signUp",
					"arguments": [
						"{{ data:email }}",
						"{{ data:* }}"
					],
					"exception-action": "fail",
					"exception-field-names": [
						"email",
						"password",
						"confirm-password"
					]
				}
			]
		}
	]
}
