{
	"submit-button": "Sign Up",
	"fields": {
		"email": {
			"type": "input",
			"label": "Email",
			"constraints": [
				{
					"name": "not-blank",
					"options": {
						"message": "Please provide your email address"
					}
				},
				{
					"name": "email"
				}
			]
		}
	},
	"steps": [
		{
			"fieldsets": [
				{
					"fields": [
						"email"
					]
				}
			],
			"processors": [
				{
					"module": "user-integration",
					"method": "recoverPassword",
					"arguments": [
						"{{ data:email }}"
					],
					"exception-action": "fail",
					"exception-field-names": [
						"email"
					]
				}
			]
		}
	]
}
