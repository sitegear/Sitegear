	"card-number": {
		"type": "input",
		"label": "Credit Card Number",
		"settings": {
			"sensitive": true,
			"attributes": {
				"maxlength": 16
			}
		},
		"constraints": [
			{
				"name": "not-blank",
				"options": {
					"message": "Please provide your credit card number"
				}
			},
			{
				"name": "regex",
				"options": {
					"pattern": "^\\d{15}\\d?$",
					"message": "Sorry, I don't understand your credit card number. Please double check that it is correct, it should have 15 or 16 digits and no spaces."
				}
			}
		]
	},
	"card-cvn": {
		"type": "input",
		"label": "Verification Code",
		"settings": {
			"sensitive": true,
			"attributes": {
				"maxlength": 4
			}
		},
		"constraints": [
			{
				"name": "not-blank",
				"options": {
					"message": "Please provide your credit card verification code."
				}
			},
			{
				"name": "regex",
				"options": {
					"pattern": "^\\d{3}\\d?$",
					"message": "Sorry, I don't understand your verification code. Please double check that it is correct, it should have 3 or 4 digits only and no spaces."
				}
			}
		]
	},
	"card-expiry": {
		"type": "month-year-select",
		"label": "Expiry",
		"settings": {
			"sensitive": true,
			"attributes": {
				"class": "card-expiry"
			},
			"type": "relative",
			"year-min": 0,
			"year-max": 30
		},
		"validator": "validateMonthYearSelect"
	},
	"card-name": {
		"type": "input",
		"label": "Full Name on Card",
		"settings": {
			"sensitive": true
		},
		"constraints": [
			{
				"name": "not-blank",
				"options": {
					"message": "Please provide your full name as printed on your credit card"
				}
			}
		]
	},
	"agreement": {
		"type": "multi-input",
		"label": "Agreement",
		"settings": {
			"values": [
				{
					"value": "yes",
					"label": "I accept the <a href=\"terms\">terms &amp; conditions<\/a>"
				}
			]
		},
		"constraints": [
			{
				"name": "not-blank",
				"options": {
					"message": "Please tick the box to indicate your acceptance of our terms."
				}
			}
		]
	}
